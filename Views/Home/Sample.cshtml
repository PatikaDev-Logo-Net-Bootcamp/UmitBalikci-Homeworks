@model UserViewModel
@{
    ViewData["Title"] = "Sample Page";
}

<form id=form1 method="post">


    <div class="mb-3">
        <label class="form-label" asp-for="FirstName"></label>
        <input type="text" class="form-control" id="firstName" asp-for="FirstName">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="LastName"></label>
        <input type="text" class="form-control" id="lastName" asp-for="LastName">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="EMail"></label>
        <input type="email" class="form-control" id="email" asp-for="EMail">
        <span asp-validation-for="EMail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Password"></label>
        <input type="password" class="form-control" id="password" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" value="submit" class="btn btn-success">KAYIT OL</button>

</form>
